<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.dbEntity.PlayersEntity" table="Players" schema="bigtennis">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <set name="matchesById" inverse="true">
            <key>
                <column name="player1"/>
            </key>
            <one-to-many not-found="ignore" class="entity.dbEntity.MatchesEntity"/>
        </set>
        <set name="matchesById_0" inverse="true">
            <key>
                <column name="player2"/>
            </key>
            <one-to-many not-found="ignore" class="entity.dbEntity.MatchesEntity"/>
        </set>
    </class>
</hibernate-mapping>